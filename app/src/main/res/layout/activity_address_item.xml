<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"
        android:layout_marginTop="10dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_address_del_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jian3x"
            android:focusable="true"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>



            <TextView
                android:id="@+id/item_address_default_tv"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:text="默认"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@drawable/address_tv"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:visibility="visible"
                android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/item_address_area_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color"
                android:textSize="12dp"
                android:text="合肥市政务区蔚蓝商务港"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/item_address_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:text="A幢2单元13层02室"
                android:layout_marginTop="5dp"/>


            <LinearLayout
                android:id="@+id/item_address_comprehensive_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_address_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奕欢"
                    android:textColor="@color/color_888"
                    android:textSize="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/item_address_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15055889770"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textSize="12dp"
                    android:textColor="@color/color_888"/>

            </LinearLayout>



        </LinearLayout>


        <RelativeLayout
            android:id="@+id/item_address_edit_rl"
            android:layout_width="50dp"
            android:visibility="gone"
            android:focusable="true"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_address_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/pencil3x"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"
        />

</LinearLayout>