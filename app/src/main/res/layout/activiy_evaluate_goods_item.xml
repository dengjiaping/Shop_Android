<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white">
        
        <ImageView
            android:id="@+id/item_evaluate_img_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ph3x"
            />

        <TextView
            android:id="@+id/item_evaluate_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_evaluate_img_iv"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="零食坚果炒货山核桃长寿包宝宝"/>

        <TextView
            android:id="@+id/item_evaluate_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_evaluate_name_tv"
            android:layout_toRightOf="@+id/item_evaluate_img_iv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_888"
            android:text="三只松鼠专场"/>

        <TextView
            android:id="@+id/item_evaluate_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/text_color"
            android:textSize="12dp"
            android:text="￥45"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="评价"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:layout_marginLeft="10dp"
            />
        
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/item_evaluate_praise_rb"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:button="@null"
                android:text="好评"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/evaluate_select"/>
            <RadioButton
                android:id="@+id/item_evaluate_middle_rb"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:button="@null"
                android:text="中评"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/evaluate_select"/>
            <RadioButton
                android:id="@+id/item_evaluate_bad_rb"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:button="@null"
                android:text="差评"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/evaluate_select"/>

        </RadioGroup>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            android:text="感受"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/item_evaluate_feel_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:hint="说说您的感受"
            android:textColor="@color/text_color"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:gravity="top"
            />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/ay_evaluate_fonts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:textColor="@color/color_888"
            android:text="/100"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/ay_evaluate_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ay_evaluate_fonts_tv"
            android:textSize="12dp"
            android:textColor="@color/color_888"
            android:text="100 "
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        
        <TextView
            android:id="@+id/item_evaluate_submit_tv"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/my_color"
            android:textSize="12dp"
            android:background="@drawable/evaluate_btn"/>

    </RelativeLayout>

</LinearLayout>