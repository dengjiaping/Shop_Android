<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_goodsclass_bg_ll"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="8dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <com.xiaojishop.Android.widget.EImageView
        android:id="@+id/item_goodsclass_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/eimage_bg"
        android:padding="10dp"
        android:src="@drawable/test_pic3" />

    <TextView
        android:id="@+id/item_goodsclass_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:singleLine="true"
        android:text="江山如此多娇江山如此多娇江山如此多娇江山如此多娇"
        android:textColor="#333"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_goodsclass_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="200g*24"
                android:textColor="#9A9A9A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/item_goodsclass_price_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="￥27.90"
                android:textColor="@color/my_color"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/item_goodsclass_car_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:background="@drawable/search_car_bg_gray"
            android:padding="6dp"
            android:src="@drawable/serach_car" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />


</LinearLayout>
