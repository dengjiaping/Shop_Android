<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_index_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@drawable/index_pic1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/item_index_onebg_ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.shop.Android.widget.EImageView
                android:id="@+id/item_index_one_iv"
                android:background="@drawable/eimage_bg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/default_image" />

            <TextView
                android:id="@+id/item_index_onename_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="安卓"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_index_oneprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:text="￥59.9"
                android:textColor="@color/my_color"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_index_twobg_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.shop.Android.widget.EImageView
                android:id="@+id/item_index_two_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/index_pic3" />

            <TextView
                android:id="@+id/item_index_twoname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="AnchorAnchorAnchorAnchorAnchorAnchor "
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_index_twoprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥59.9"
                android:textColor="@color/my_color"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_index_threebg_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <com.shop.Android.widget.EImageView
                android:id="@+id/item_index_three_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/index_pic4" />

            <TextView
                android:id="@+id/item_index_threename_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:text="An"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/item_index_threeprice_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥59.9"
                android:textColor="@color/my_color"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f9f9f9" />

</LinearLayout>