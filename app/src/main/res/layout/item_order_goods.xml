<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        >
        
        <ImageView
            android:id="@+id/item_goods_img_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ph3x"
            />

        <TextView
            android:id="@+id/item_goods_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_goods_img_iv"
            android:text="统一汤达人日式豚骨拉面"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_color"
            android:textSize="14dp"
            />

        <TextView
            android:id="@+id/item_goods_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="￥143"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/item_goods_weight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_goods_img_iv"
            android:layout_below="@+id/item_goods_name_tv"
            android:text="78g/杯"
            android:textColor="@color/color_888"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/item_goods_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_goods_price_tv"
            android:layout_marginRight="10dp"
            android:textSize="12dp"
            android:textColor="@color/color_888"
            android:text="x2"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"/>

</LinearLayout>