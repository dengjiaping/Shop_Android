<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include layout="@layout/com_title_system" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/color_fe" />

        <RelativeLayout
            android:id="@+id/ay_helper_order_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
           <ImageView
               android:id="@+id/ay_helper_order_iv"
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:src="@mipmap/savex"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ay_helper_order_iv"
                android:layout_marginLeft="10dp"
                android:text="订单取消问题"
                android:textColor="@color/text_color"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/ay_helper_bottom_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/bottom3x"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_fe" />

        <WebView
            android:id="@+id/ay_helper_order_wv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="visible">
        </WebView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_fe" />

        <RelativeLayout
            android:id="@+id/ay_helper_integral_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            
            <ImageView
                android:id="@+id/ay_helper_integral_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/quit3x"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:layout_toRightOf="@+id/ay_helper_integral_iv"
                android:textColor="@color/text_color"
                android:text="积分等级"/>
            
            <ImageView
                android:id="@+id/ay_helper_fen_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/top3x"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_fe" />

        <WebView
            android:id="@+id/ay_helper_integral_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </WebView>
        
        <RelativeLayout
            android:id="@+id/ay_helper_other_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">
            
            <ImageView
                android:id="@+id/ay_helper_other_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/targetx"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ay_helper_other_iv"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color"
                android:textSize="14dp"
                android:layout_marginLeft="10dp"
                android:text="其他问题"/>
            
            <ImageView
                android:id="@+id/ay_helper_top_iv"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/top3x"/>

            
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_fe" />

        <WebView
            android:id="@+id/ay_helper_other_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

        </WebView>

    </LinearLayout>

</LinearLayout>