<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/item_integrals_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品订单编号"
            android:textColor="@color/text_color"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/text_color"
            android:text="123456789"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_integrals_order_tv"/>

        <TextView
            android:id="@+id/item_integrals_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-09-12"
            android:layout_below="@+id/item_integrals_order_tv"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"
            android:textColor="@color/color_888"
            android:layout_marginTop="5dp"/>


        <TextView
            android:id="@+id/item_integrals_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_green"
            android:text="+10"
            android:textSize="12dp"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_fe"/>

</LinearLayout>