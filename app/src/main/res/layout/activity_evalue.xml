<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/com_title_system" />

    <include layout="@layout/layout_no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F9F9F9"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:background="@drawable/circle_bg_line"
                android:src="@drawable/circle_default_image" />

            <TextView
                android:maxEms="6"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/ay_evalue_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:text="小方便利"
                android:textColor="#8B8B8B"
                android:textSize="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <TextView
                android:id="@+id/ay_evalue_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:text="2016-09-08"
                android:textColor="#8B8B8B"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="#FF6100" />

            <TextView
                android:id="@+id/ay_evalue_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="我觉得这些懂事超级好用的家伙"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/ay_evalue_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:ellipsize="end"
            android:lineSpacingExtra="6dp"
            android:text="小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利小方便利"
            android:textColor="#8B8B8B"
            android:textSize="12dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/eimage_bg_black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="评论"
                android:textColor="#333"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D0D0D0" />

            <ListView
                android:id="@+id/ay_evalue_list_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="@color/transparent"
                android:paddingBottom="1dp"
                android:scrollbars="none" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ay_evalue_content_et"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/eimage_bg_black"
            android:hint="写评论"
            android:paddingLeft="5dp"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/ay_evalue_send_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"
            android:text="发送"
            android:textColor="#737373"
            android:textSize="14dp" />
    </LinearLayout>


</LinearLayout>